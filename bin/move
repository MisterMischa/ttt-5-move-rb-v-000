#!/usr/bin/env ruby

require_relative '../lib/move.rb'
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe! Choose a number between 1-9."
puts "Where would you like to go?"
input = gets.strip
index = input_to_index(input)
move(board, index, input)
display_board(board)
